@using Microsoft.AspNetCore.Identity
@using SosyalAjandam.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @{
            var user = await UserManager.GetUserAsync(User);
            string displayName = !string.IsNullOrEmpty(user?.FullName) ? user.FullName : (User.Identity?.Name?.Split('@')[0] ?? "Kullanıcı");
        }
        <a  class="nav-link text-neon-red" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <div class="lh-1">Hesap Ayarları</div>
            <small class="opacity-75" style="font-size: 0.85em;">(@displayName)</small>
        </a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="margin:0; padding:0;">
            <button type="submit" class="nav-link btn btn-link text-neon-red w-100 text-start ps-0">Çıkış</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-neon-red" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-neon-red" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}
</ul>
