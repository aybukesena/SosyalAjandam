@model SosyalAjandam.Models.Group

@{
    ViewData["Title"] = "Yeni Grup";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="glass-panel p-5">
            <h2 class="mb-4 text-center">Yeni Grup Oluştur</h2>
            
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Grup Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Yazılım Ekibi" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Grup amacı..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-4 form-check form-switch">
                    <input class="form-check-input" asp-for="IsPrivate" type="checkbox" id="privateSwitch">
                    <label class="form-check-label text-white" for="privateSwitch">
                        <i class="bi bi-lock-fill me-1"></i>Gizli Grup (Aramalarda görünmez)
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-cyber">Oluştur</button>
                    <a asp-action="Index" class="btn btn-link text-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
