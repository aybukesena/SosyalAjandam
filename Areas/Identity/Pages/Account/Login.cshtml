@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">
        <div class="glass-panel p-5">
            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold text-white">Giriş Yap</h1>
                <p class="text-white-50">Sosyal Ajandan'a hoş geldin.</p>
            </div>
            
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control bg-transparent text-white" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="text-secondary">E-posta</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control bg-transparent text-white" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="text-secondary">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label text-white-50">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                
                <div class="d-grid gap-2 mb-3">
                    <button id="login-submit" type="submit" class="btn btn-cyber btn-lg">Giriş Yap</button>
                </div>
                
                <div class="text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Şifremi unuttum</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Yeni hesap oluştur</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
